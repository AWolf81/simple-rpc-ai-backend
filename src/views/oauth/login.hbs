<div class="login-container">
  {{#if appLogo}}
    <div class="app-logo">
      <img src="{{appLogo}}" alt="{{appName}}">
    </div>
  {{else}}
    <div class="app-logo">üîê</div>
  {{/if}}
  
  <h1>Welcome to {{appName}}</h1>
  <p class="subtitle">Choose your identity provider to continue</p>
  
  {{#if error}}
    <div class="error-message">
      <h3>Authentication Error</h3>
      <p><strong>Error:</strong> {{error.code}}</p>
      <p>{{error.message}}</p>
    </div>
  {{/if}}
  
  <div class="providers">
    {{#each providers}}
      <a href="{{loginUrl}}" class="provider-button">
        <span class="provider-icon">
          {{#if ../providerIcons.[name]}}
            {{{../providerIcons.[name]}}}
          {{else}}
            {{{providerIcon name}}}
          {{/if}}
        </span>
        <div class="provider-content">
          <strong class="provider-name">{{displayName}}</strong>
          <small class="provider-description">Sign in with {{displayName}}</small>
        </div>
      </a>
    {{/each}}
  </div>
  
  {{#unless providers.length}}
    <div class="no-providers">
      ‚ùå No identity providers are configured.<br>
      Please check your environment variables.
    </div>
  {{/unless}}
  
  <div class="footer">
    Powered by {{appName}}
  </div>
</div>