# Configure pnpm to handle optional native dependencies gracefully
# These settings help with cross-platform GitHub installs where native modules may fail

# Allow builds to continue even if optional dependencies fail
# This is critical for ssh2/cpu-features which provide optional native crypto bindings
ignore-build-errors=true

# Auto-install peer dependencies to avoid version conflicts
auto-install-peers=true
strict-peer-dependencies=false

# Use python3 explicitly (helps on systems where python -> python2)
python=python3

# Performance optimizations
side-effects-cache=true

# Shamefully hoist to avoid import issues during builds
shamefully-hoist=true