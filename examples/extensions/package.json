{
  "name": "ai-backend-extension-example",
  "displayName": "AI Backend Extension Example",
  "description": "Example VS Code extension using simple-rpc-ai-backend",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./vscode-extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeReviewAI.reviewSecurity",
        "title": "üõ°Ô∏è Security Review",
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.reviewQuality", 
        "title": "‚ú® Code Quality Review",
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.reviewPerformance",
        "title": "‚ö° Performance Review", 
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.reviewSelection",
        "title": "üîç Review Selection",
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.openSettings",
        "title": "‚öôÔ∏è Open Settings",
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.checkBackend",
        "title": "üè• Check Backend Health",
        "category": "Code Review AI"
      },
      {
        "command": "codeReviewAI.detectServer",
        "title": "üîç Detect Server Type",
        "category": "Code Review AI"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "codeReviewAI.reviewSelection",
          "group": "ai-review@1"
        },
        {
          "command": "codeReviewAI.reviewSecurity", 
          "group": "ai-review@2"
        },
        {
          "command": "codeReviewAI.reviewQuality",
          "group": "ai-review@3"
        },
        {
          "command": "codeReviewAI.reviewPerformance",
          "group": "ai-review@4"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(js|ts|jsx|tsx|py|java|cs|go|rs|cpp|c|php|rb)$/",
          "command": "codeReviewAI.reviewSecurity",
          "group": "ai-review@1" 
        }
      ]
    },
    "configuration": {
      "title": "Code Review AI",
      "properties": {
        "codeReviewAI.backendUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "URL of the AI backend server"
        },
        "codeReviewAI.anthropicApiKey": {
          "type": "string", 
          "default": "",
          "description": "Your Anthropic API key (stored securely)"
        },
        "codeReviewAI.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenAI API key (stored securely)"
        },
        "codeReviewAI.googleApiKey": {
          "type": "string",
          "default": "",
          "description": "Your Google AI API key (stored securely)"
        },
        "codeReviewAI.autoUpgrade": {
          "type": "boolean",
          "default": true,
          "description": "Automatically suggest authentication upgrades"
        },
        "codeReviewAI.preferredProvider": {
          "type": "string",
          "enum": ["anthropic", "openai", "google"],
          "default": "anthropic",
          "description": "Preferred AI provider when multiple keys are available"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "echo 'No compilation needed for JavaScript example'",
    "watch": "echo 'No watch needed for JavaScript example'",
    "package": "vsce package",
    "deploy": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^2.15.0"
  },
  "dependencies": {
    "simple-rpc-ai-backend": "file:../../"
  }
}