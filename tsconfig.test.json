{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@services/*": ["src/services/*"],
      "@auth/*": ["src/auth/*"],
      "@src-trpc/*": ["src/trpc/*"],
      "@database/*": ["src/database/*"],
      "@billing/*": ["src/billing/*"],
      "@security/*": ["src/security/*"],
      "@storage/*": ["src/storage/*"],
      "@schemas/*": ["src/schemas/*"],
      "@mcp/*": ["src/mcp/*"],
      "@monetization/*": ["src/monetization/*"],
      "@middleware/*": ["src/middleware/*"]
    }
  },
  "include": ["src/**/*", "test/**/*"],
}