{
  "name": "simple-rpc-ai-backend",
  "version": "0.1.0",
  "description": "Simple RPC client and server for AI-powered VS Code extensions with secure system prompt management",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client.js",
    "./server": "./dist/server.js",
    "./ai": "./dist/ai-service.js"
  },
  "scripts": {
    "build": "tsc && tsc-alias && npm run copy-assets && npm run build:trpc-methods",
    "build:prod": "npm run build",
    "postinstall": "npm run build",
    "prepare": "npm run build",
    "build:trpc-methods": "node tools/generate-trpc-methods.js",
    "copy-assets": "mkdir -p dist/docker dist/database/migrations dist/views && cp -r docker/* dist/docker/ && cp docker-compose.postgres.yml dist/ && cp .env.postgres.example dist/ && cp src/database/migrations/*.sql dist/database/migrations/ && cp -r src/views/* dist/views/",
    "registry:health": "node tools/registry-health-check.js",
    "models:check": "node tools/registry-update-checker.js",
    "models:review": "echo 'Model review interface coming soon'",
    "models:apply": "echo 'Model apply interface coming soon'",
    "dev": "tsc --watch",
    "dev:tsx": "tsx --watch src/index.ts",
    
    "dev:server": "tsx --watch examples/02-mcp-server/server.js",
    "dev:server:basic": "tsx --watch examples/01-basic-server/server.js",
    
    "dev:panel": "node tools/dev-panel.js",
    "dev:mcpjam": "node ./node_modules/@mcpjam/inspector/bin/start.js --port 4000",
    "dev:playground": "concurrently \"pnpm dev:mcpjam\" \"pnpm dev:panel\"",
    
    "dev:docs": "concurrently \"pnpm dev:server\" \"pnpm dev:playground\"",
    "dev:docs:basic": "concurrently \"pnpm dev:server:basic\" \"pnpm dev:playground\"",
    
    "dev:full": "concurrently \"pnpm dev\" \"pnpm dev:server\" \"pnpm dev:playground\"",
    "dev:full:basic": "concurrently \"pnpm dev\" \"pnpm dev:server:basic\" \"pnpm dev:playground\"",
    "start:mcp": "node examples/02-mcp-server/server.js",
    "kill-ports": "lsof -ti:8000,8001,8080,3000,4000 | xargs kill -9 2>/dev/null || echo '✅ No processes found on development ports'",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:integration": "node test/integration/index.js",
    "test:manual": "tsx src/test/**/*.test.ts",
    "test:isolation": "tsx src/test/postgres/user-isolation.test.ts",
    "test:postgres": "tsx src/test/postgres/user-isolation.test.ts",
    "tsx": "tsx",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "tsc --noEmit --watch",
    "convert-aliases": "node tools/convert-to-aliases.js",
    "clean": "rimraf dist coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "docs:inspector": "echo '🔍 Opening Inspector...' && (xdg-open 'https://inspector.open-rpc.org/?url=http://localhost:8000/rpc' || open 'https://inspector.open-rpc.org/?url=http://localhost:8000/rpc' || echo 'Open: https://inspector.open-rpc.org/?url=http://localhost:8000/rpc')",
    "docs:playground": "echo '🎮 Opening Playground...' && (xdg-open 'https://playground.open-rpc.org/?url=http://localhost:8000/openrpc.json' || open 'https://playground.open-rpc.org/?url=http://localhost:8000/openrpc.json' || echo 'Open: https://playground.open-rpc.org/?url=http://localhost:8000/openrpc.json')",
    "validate:openrpc": "npx @open-rpc/schema-utils-js validate --document http://localhost:8000/openrpc.json",
    "postgres:setup": "./docker/setup-postgres.sh",
    "postgres:start": "docker-compose --env-file .env.postgres -f docker-compose.postgres.yml up -d",
    "postgres:stop": "docker-compose --env-file .env.postgres -f docker-compose.postgres.yml down",
    "postgres:logs": "docker-compose --env-file .env.postgres -f docker-compose.postgres.yml logs -f",
    "demo:storage": "node examples/flexible-storage-examples.js",
    "demo:trpc": "node -e \"import('./dist/server-trpc.js').then(({createTRPCServer}) => { const server = createTRPCServer({port: 8001}); server.start().then(() => console.log('🚀 tRPC demo running on http://localhost:8001\\nTry: curl http://localhost:8001/health')); })\"",
    "demo:oauth": "pnpm build && node examples/authentication/basic-oauth-example.js",
    "demo:oauth:branded": "pnpm build && node examples/authentication/branded-oauth-example.js",
    "demo:mcp:opensaas": "pnpm build && node examples/authentication/opensaas-mcp-auth-example.js",
    "test:oauth": "node test-oauth-discovery.js",
    "test:trpc": "node -e \"import('./dist/server-trpc.js').then(async ({createTRPCServer}) => { const s = createTRPCServer({port: 8003}); await s.start(); const r = await fetch('http://localhost:8003/health'); console.log('✅ tRPC test:', (await r.json()).status); await s.stop(); })\""
  },
  "keywords": [
    "vscode",
    "extension",
    "rpc",
    "ai",
    "anthropic",
    "openai",
    "code-analysis",
    "backend",
    "jsonrpc",
    "secure"
  ],
  "author": "Extracted from universal-ai-encryption-mcp",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^0.0.0",
    "@ai-sdk/google": "^0.0.0",
    "@ai-sdk/openai": "^0.0.0",
    "@anolilab/ai-model-registry": "^1.3.0",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@node-oauth/express-oauth-server": "^4.1.4",
    "@node-oauth/oauth2-server": "^5.2.1",
    "@trpc/client": "^11.4.4",
    "@trpc/server": "^11.4.4",
    "@types/ioredis": "^5.0.0",
    "ai": "^3.0.0",
    "axios": "^1.12.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "express-handlebars": "^8.0.3",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "fast-xml-parser": "^4.3.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.7.0",
    "json-rpc-2.0": "^1.7.1",
    "jsonwebtoken": "^9.0.2",
    "openid-client": "^6.7.1",
    "pg": "^8.16.3",
    "redis": "^5.7.0",
    "superjson": "^2.2.2",
    "trpc-panel": "^1.3.4",
    "trpc-playground": "^1.0.4",
    "trpc-to-mcp": "^1.3.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@mcpjam/inspector": "^0.9.8",
    "@open-rpc/inspector": "^2.0.3",
    "@open-rpc/playground": "^1.6.9",
    "@opentelemetry/core": "^2.0.1",
    "@testcontainers/postgresql": "^10.2.0",
    "@tsconfig/node22": "^22.0.2",
    "@tsconfig/node24": "^24.0.1",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "cheerio": "^1.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "lodash": "^4.17.21",
    "node-fetch": ">=2.6.7",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.0.0",
    "typescript-transform-paths": "^3.5.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.0.0",
    "zod-to-ts": "^1.2.0"
  },
  "engines": {
    "node": ">=22.18.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE.md",
    "docker/**/*",
    "docker-compose.postgres.yml",
    ".env.postgres.example",
    "src/database/migrations/*.sql"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/AWolf81/simple-rpc-ai-backend"
  },
  "pnpm": {
    "overrides": {
      "nanoid": "^3.3.8",
      "esbuild": "^0.25.0",
      "loader-utils": ">=1.4.1",
      "json-schema": ">=0.4.0",
      "semantic-release": ">=17.2.3",
      "trim": ">=0.0.3",
      "semver-regex": ">=3.1.3",
      "marked": ">=4.0.10",
      "node-fetch": ">=2.6.7",
      "json5": ">=1.0.2",
      "cross-spawn": ">=6.0.6",
      "lodash.set": ">=4.3.3",
      "hono": ">=4.9.6",
      "postcss": ">=8.4.31",
      "@octokit/request-error": ">=5.1.1",
      "vite": "^6.3.6",
      "@octokit/request": ">=8.4.1",
      "@octokit/plugin-paginate-rest": ">=9.2.2",
      "prismjs": ">=1.30.0",
      "babel-traverse": "npm:@babel/traverse@^7.23.2",
      "html-parse-stringify2": "npm:html-parse-stringify@^3.0.1"
    },
    "peerDependencyRules": {
      "ignoreMissing": [
        "@trpc/server"
      ],
      "allowedVersions": {
        "trpc-panel>@trpc/server": "11"
      }
    }
  }
}