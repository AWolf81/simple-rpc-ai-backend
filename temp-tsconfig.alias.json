{
  "compilerOptions": {
    "baseUrl": "./dist",
    "paths": {
      "@/*": ["./*"],
      "@services/*": ["./services/*"],
      "@auth/*": ["./auth/*"],
      "@trpc/*": ["./trpc/*"],
      "@database/*": ["./database/*"],
      "@billing/*": ["./billing/*"],
      "@security/*": ["./security/*"],
      "@storage/*": ["./storage/*"],
      "@schemas/*": ["./schemas/*"],
      "@mcp/*": ["./mcp/*"],
      "@monetization/*": ["./monetization/*"],
      "@middleware/*": ["./middleware/*"]
    }
  },
  "tsc-alias": {
    "replacers": {
      "js": {
        "import": "import\\s+(.+?)\\s+from\\s+['\"](.+?)['\"]",
        "replace": "import $1 from '$2.js'"
      }
    }
  }
}